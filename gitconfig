[alias]
  cleanup = !git checkout $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@') && git pull && git branch  --merged $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@') | grep -v $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@') | xargs  git  branch  -d
  unstage = reset HEAD
  st = status
  ci = commit
  history = !git show --format=email $(git log -n 1 --pretty=format:%H -- "$1")

[apply]
  whitespace = nowarn
[core]
  editor = /usr/local/bin/nvim
  hooksPath = ~/.githooks
	excludesfile = ~/.gitignore
[push]
  default = current
  autoSetupRemote = true
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color]
  ui = auto
[diff]
  wordRegex = [^[:space:]]
  algorithm = patience
[help]
	autocorrect = 1
[advice]
	statusHints = false
[branch]
	autosetuprebase = always
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autostash = true
[log]
  decorate = true
[format]
  pretty = oneline
[rerere]
	enabled = true
[http "https://gopkg.in"]
    followRedirects = true
[commit]
  verbose = true
  template = ~/.gitmessage
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[user]
	email = alex-slynko@github.com
	name = Oleksandr Slynko
[gpg]
	program = gpg
[init]
	defaultBranch = main
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
